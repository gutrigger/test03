.container{
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
}


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 14px;
}